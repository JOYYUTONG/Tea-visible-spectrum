.card {
  margin: 15px;
  border-radius: 6px;
  border: 1px solid #dcdfe6;
  box-shadow: 0px 0px 12px rgba(0, 0, 0, .12);
}

.card .header {
  height: 50px;
  line-height: 50px;
  font-size: 16px;
  font-weight: bold;
  padding: 0 15px;
  border-bottom: 1px solid #eee;
}


.card .body {
  padding: 15px;
}
